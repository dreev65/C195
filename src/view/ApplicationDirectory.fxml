<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ApplicationDirectoryController">
    <children>
        <Button fx:id="toCustomersButton" layoutX="200.0" layoutY="175.0" mnemonicParsing="false" onAction="#switchToCustomers" prefHeight="50.0" prefWidth="200.0" text="To Customers">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Button>
        <Button fx:id="toAppointmentsButton" layoutX="200.0" layoutY="275.0" mnemonicParsing="false" onAction="#switchToAppointments" prefHeight="50.0" prefWidth="200.0" text="To Appointments">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Button>
        <Button fx:id="toreportsButton" layoutX="200.0" layoutY="375.0" mnemonicParsing="false" onAction="#switchToReports" prefHeight="50.0" prefWidth="200.0" text="To Reports">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Button>
        <Label layoutX="132.0" layoutY="60.0" text="Application Directory">
            <font>
                <Font name="System Bold" size="36.0" />
            </font>
        </Label>
    </children>
</AnchorPane>

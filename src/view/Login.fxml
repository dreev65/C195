<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" fx:id="LoginForm" prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <children>
        <TextField fx:id="usernameBox" layoutX="300.0" layoutY="171.0" prefHeight="25.0" prefWidth="149.0" promptText="%usernameBox" />
        <PasswordField fx:id="passwordBox" layoutX="300.0" layoutY="222.0" promptText="%passwordBox" />
        <Label fx:id="titleLabel" layoutX="60.0" layoutY="60.0" text="%title">
            <font>
                <Font name="System Bold" size="36.0" />
            </font>
        </Label>
        <Label fx:id="usernameLabel" layoutX="125.0" layoutY="175.0" text="%usernameLabel" />
        <Label fx:id="passwordLabel" layoutX="125.0" layoutY="226.0" text="%passwordLabel" />
        <Label fx:id="locationLabel" layoutX="73.0" layoutY="429.0" text="%locationLabel" />
        <Label fx:id="userLocationLabel" layoutX="182.0" layoutY="429.0" prefHeight="17.0" prefWidth="149.0" text="%userLocationLabel" />
        <Button fx:id="loginButton" layoutX="367.0" layoutY="259.0" mnemonicParsing="false" onAction="#switchToScheduler" prefHeight="25.0" prefWidth="81.0" text="%loginButton" />
        <Button fx:id="exitButton" layoutX="300.0" layoutY="259.0" mnemonicParsing="false" onAction="#exitButton" prefHeight="25.0" prefWidth="62.0" text="%exitButton" />
    </children>
</AnchorPane>
